<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_round_ripple">
        <item name="android:colorControlHighlight">#7A7979</item>
        <item name="android:radius">22dp</item>
    </style>
    <style name="text_normal">
        <item name="android:layout_margin">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_secondary">
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginStart">15sp</item>
        <item name="android:layout_marginEnd">15sp</item>
        <item name="android:textColor">@color/gray_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="view_search">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
    <style name="qzone_text_normal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="qzone_text_secondary">
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginStart">15sp</item>
        <item name="android:layout_marginEnd">15sp</item>
        <item name="android:textColor">@color/gray_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>